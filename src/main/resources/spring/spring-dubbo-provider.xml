<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd  
            http://code.alibabatech.com/schema/dubbo  
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="dreyer-service-user" />

	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" address="${dubbo.registry.address}"/>

	<!-- 用dubbo协议在20899端口暴露服务 payload:请求及响应数据包的大小,默认为88388608(8M),现设置为默认值的两倍,为支持大数据量的excel导出-->
	<dubbo:protocol name="dubbo" port="20899" payload="16777216" />

	<!-- 当ProtocolConfig和ServiceConfig某属性没有配置时,采用此缺省值 -->
	<dubbo:provider timeout="50000" threadpool="fixed" threads="500" accepts="1000" />

	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service retries="0" interface="com.dreyer.facade.user.service.UserFacade" ref="userFacade" />

</beans>